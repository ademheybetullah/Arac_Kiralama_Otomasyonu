@using EntityLayer.Concrete;
@using Araç_Kiralama_Otomasyonu.Models;
@model CarImageCompanyModel
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Scripts/Css/Navbar.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>ListCar</title>
</head>
<body>
    <script src="~/Scripts/JsCodes/JsListAllCar.js"></script>
    @Html.Partial("CustomerNavbar")
    <div style="margin-bottom:70px" class="row">
        <div class="shadow-sm p-4 mb-4 bg-light border border-2 container mt-3 col-sm-3 p-5">
            <h5>Filtrele</h5>
            <div class="input-group mb-3">
                <span style="background-color: #cfb53b; width:100px " class="input-group-text">Fiyat max</span>
                <input type="text" class="form-control" id="MaxFiyat" placeholder="Max Fiyat">
            </div>
            <div class="input-group mb-3">
                <span style="background-color: #cfb53b; width: 100px " class="input-group-text">Şehir</span>
                <input type="text" class="form-control" id="Sehir">
            </div>
            <div class="input-group mb-3">
                <span style="background-color: #cfb53b; width: 100px " class="input-group-text">Skor</span>
                <input type="text" class="form-control" id="Skor" placeholder="Max Puan">
            </div>
            <div class="input-group mb-3">
                <span style="background-color: #cfb53b; width: 100px " class="input-group-text">Marka</span>
                <input type="text" class="form-control" id="Marka">
            </div>
        </div>
        <div class="container mt-3 col-sm-9 p-5">
            <div class="row row-cols-1 row-cols-md-4">
                @foreach (var item in Model.Cars)
                {

                    <div class="shadow-sm p-1 bg-light border border-2 col mb-4">
                        <div class="card">
                            <div class="content-overlay">
                                <img src="@Model.Images.FirstOrDefault(x=>x.CarId==item.CarId).ImagePath" class="card-img-top" alt="Arac Fotosu" height="200" width="200">
                            </div>
                            <div class="card-body">
                                <h4 class="card-title markaBilgisi"><strong>@item.Brand @item.Model</strong></h4>
                                <strong>Günlük Kiralama Ücreti: </strong><p class="m-0 p-0 fiyatBilgisi">@item.RentalFee</p>
                                <strong>Şehir: </strong><p class="m-0 p-0 sehirBilgisi">@Model.Companies.FirstOrDefault(x => x.CompanyId == item.CompanyId).City</p>
                                <strong>Şirket Puanı: </strong><p class="m-0 p-0 skorBilgisi">@Model.Companies.FirstOrDefault(x => x.CompanyId == item.CompanyId).CompanyScore</p>
                                <button id="acma" type="button" class="btn" data-bs-toggle="modal" data-bs-target="#_@item.CarId" style="background-color: #cfb53b ">İncele</button>
                            </div>
                        </div>
                    </div>

                    <div class="modal" id="_@item.CarId">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h3 class="modal-title">Araç Bilgisi</h3>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                    <div class="container row">
                                        @for (int i = 0; i < Model.Images.Where(x => x.CarId == item.CarId).ToArray().Length; i++)
                                        {
                                            <div class="col-sm-6 p-1">
                                                <img height=auto width=100% src="@Model.Images.Where(x => x.CarId == item.CarId).ToArray()[i].ImagePath" />
                                            </div>
                                        }

                                    </div>

                                    <hr>
                                    <div class="container mt-3">
                                        <h4>Araç Genel Özellikleri</h4>
                                        <ul class="list-group">
                                            <li class="list-group-item"><strong>Kategory: </strong>@item.CarCategory</li>
                                            <li class="list-group-item"><strong>Marka: </strong>@item.Brand</li>
                                            <li class="list-group-item"><strong>Model: </strong>@item.Model</li>
                                            <li class="list-group-item"><strong>Kirama Ücreti: </strong>@item.RentalFee</li>
                                            <li class="list-group-item"><strong>Rezervasyon Ücreti: </strong>@item.DepositFee</li>
                                            <li class="list-group-item"><strong>Min Ehliyet Yaşı: </strong>@item.MinDrivingLicenseAge</li>
                                            <li class="list-group-item"><strong>Min Yaş: </strong>@item.MinAge</li>
                                            <li class="list-group-item"><strong>Kilometre: </strong>@item.InstantKm</li>
                                            <li class="list-group-item"><strong>Koltuk sayısı: </strong>@item.Seats</li>
                                        </ul>
                                    </div>
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <a class="btn btn-success" href="~/RentingAdd/AddRenting/@item.CarId">Kirala</a>
                                    <a class="btn btn-warning" href="~/ReservationAdd/AddReservation/@item.CarId">Rezervasyon</a>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @Html.Partial("_Footer")
</body>
</html>
