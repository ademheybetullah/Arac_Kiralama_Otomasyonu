@using Araç_Kiralama_Otomasyonu.Models
@model RentingModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListCustomerRentings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Scripts/Css/Navbar.css" rel="stylesheet" />
    <link href="~/Scripts/Css/RentingList.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>
    @Html.Partial("EmployeeNavbar")
    <div style="margin-bottom:70px" class="container mt-3">
        <p>Kiralamalar</p>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th id="AracTh">Araç</th>
                        <th id="BaslangicTarihiTh">Başlangıç Tarihi</th>
                        <th id="BitisTarihiTh">Bitiş Tarihi</th>
                        <th id="IlkKilometreTh">İlk Kilometre</th>
                        <th id="SonKilometreTh">Verilen Puan</th>
                        <th id="UcretTh">Ücret</th>
                        <th id="PuanTh">Son Kilometre</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Rentings)
                    {

                        <tr>
                            <td id="AracTd"><button class="listBtn" data-bs-toggle="modal" data-bs-target="#_i_@item.RentingId" type="button">Aracı Gör</button></td>
                            <td id="BaslangicTarihiTd">@item.StartDate</td>
                            <td id="BitisTarihiTd">@item.FinishDate</td>
                            <td id="IlkKilometreTd">@item.FirstKm</td>
                            <td id="SonKilometreTd">@item.LastKm</td>
                            <td id="UcretTd">@item.Payment</td>
                            @if (item.FinishDate.Date < DateTime.Now)
                            {
                                if (item.LastKm < item.FirstKm)
                                {

                                    <td id="PuanTd"><button class="listBtn" data-bs-toggle="modal" data-bs-target="#_@item.RentingId" type="button">Gir</button></td>
                                }
                                else
                                {
                                    <td id="PuanTd">@item.LastKm</td>
                                }

                            }
                            @if (item.FinishDate.Date > DateTime.Now)
                            {
                                <td id="PuanTd">Kiralama Sürüyor</td>
                            }


                        </tr>



                    }

                </tbody>
            </table>
        </div>
        @foreach (var item in Model.Rentings)
        {
            <div class="modal fade" id="_@item.RentingId">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Son Km</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <form method="post" class="form">
                                <input name="LastKm" />
                                <input name="CarId" value="@item.CarId" />
                                <input name="RentingId" value="@item.RentingId" />
                                <input name="CompanyId" value="@item.CompanyId" />
                                <input type="submit" />
                            </form>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button id="update" onclick="changeHref()" class="btn">Kaydet</button>
                            <a id="git">git</a>
                        </div>

                    </div>
                </div>
            </div>
        }
        @foreach (var item in Model.Rentings)
        {
            <div class="modal fade" id="_i_@item.RentingId">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Araç</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <img style="float: left; width: 100%; height: auto;" src="@item.ImagePath" />
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    @Html.Partial("_Footer")
</body>
</html>
