@using Araç_Kiralama_Otomasyonu.Models
@model CompanyEmployee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Scripts/Css/CssAddCompany.css" rel="stylesheet" />
    <title>İşyeri Ekle</title>
</head>
<body>
    @Html.Partial("AdminNavbar")
    <div style="margin-bottom:70px" class="container mt-3">
        <p>İş Yeri</p>
        <form method="post">
            <div class="row">
                <div class="col">
                    Şirket Adı
                    <input type="text" class="form-control" placeholder="Şirket Adı" name="company.Name">
                </div>
                <div class="col">
                    Şehir
                    <input type="text" class="form-control" placeholder="Şehir" name="company.City">
                </div>
                <div class="col">
                    Adres
                    <input type="text" class="form-control" placeholder="Adres" name="company.Address">
                </div>
            </div>
            <p>İşyeri Yetkilisi</p>
            <div class="row">
                <div class="col">
                    Ad
                    <input type="text" class="form-control" placeholder="Ad" name="employee.Name">
                </div>
                <div class="col">
                    Soyad
                    <input type="text" class="form-control" placeholder="Soyad" name="employee.Surname">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Email
                    <input type="email" class="form-control" placeholder="Email" name="employee.Email">
                </div>
                <div class="col">
                    Şifre
                    <input type="password" class="form-control" placeholder="Şifre" name="employee.Password">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Telefon Numarası
                    <input type="number" class="form-control" placeholder="(5xx xxx xx xx)" name="employee.PhoneNo">
                </div>
                <div class="col">
                    Adres
                    <input type="text" class="form-control" placeholder="Adres" name="employee.Address">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    &nbsp;
                </div>
                <div class="col-1">
                    <input class="gonderBtn" type="submit" />
                </div>
                <div class="col">
                    &nbsp;
                </div>
            </div>
        </form>
    </div>
    @Html.Partial("_Footer")
</body>
</html>
