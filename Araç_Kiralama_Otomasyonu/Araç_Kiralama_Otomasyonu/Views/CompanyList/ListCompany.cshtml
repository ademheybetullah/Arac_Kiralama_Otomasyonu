@using Araç_Kiralama_Otomasyonu.Models;
@model CompanyModel
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Scripts/Css/Navbar.css" rel="stylesheet" />
    <link href="~/Scripts/Css/RentingList.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>ListCompany</title>
</head>
<body>
    @Html.Partial("AdminNavbar")
    <div style="margin-bottom:70px" class="container mt-3">
        <p>Şirketler</p>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Şirket Adı</th>
                        <th>Şehir</th>
                        <th>Araba Sayısı</th>
                        <th>Şirket Puanı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Companies)
                    {
        <tr>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.CarCount</td>
            <td>@item.CompanyScore</td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>
    @Html.Partial("_Footer")
</body>
</html>
