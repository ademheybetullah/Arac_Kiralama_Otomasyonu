@using Araç_Kiralama_Otomasyonu.Models;
@model ReservationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListCustomerRentings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Scripts/Css/Navbar.css" rel="stylesheet" />
    <link href="~/Scripts/Css/RentingList.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>
    @Html.Partial("CustomerNavbar")
    <div style="margin-bottom:70px" class="container mt-3">
        <p>Rezervasyonlarım</p>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th id="AracFotosu">Araç</th>
                        <th id="BaslangicTarihiTh">Başlangıç Tarihi</th>
                        <th id="BitisTarihiTh">Bitiş Tarihi</th>
                        <th id="DepozitoUcreti">Depozito Ücreti</th>
                        <th id="PuanTh">İptal Et</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Reservations)
                    {
                        <tr>
                            <td id="PuanTd"><button class="listBtn" data-bs-toggle="modal" data-bs-target="#_i_@item.ReservationId" type="button">Aracı Gör</button></td>
                            <td id="BaslangicTarihiTd">@item.StartDate.ToString()</td>
                            <td id="BitisTarihiTd">@item.FinishDate.ToString()</td>
                            <td id="BitisTarihiTd">@item.Payment.ToString()</td>
                            @if (item.StartDate.Date > DateTime.Now)
                            {
                                <td id="PuanTd"><button class="listBtn" data-bs-toggle="modal" data-bs-target="#_@item.ReservationId" type="button">İptal Et</button></td>

                            }
                            else
                            {
                                <td id="PuanTd">Rezervasyon Bitti</td>
                            }


                        </tr>

                    }

                </tbody>
            </table>
        </div>
        @foreach (var item in Model.Reservations)
        {
            <div class="modal fade" id="_@item.ReservationId">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Emin Misin?</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <form method="post" class="form">
                                <p>İptal edilen rezervasyonun depozito bedeli iade edilmez</p>
                                <input style="display: none; visibility: hidden;" name="CarId" value="@item.CarId" />
                                <input style="display: none; visibility: hidden;" name="ReservationId" value="@item.ReservationId" />
                                <input style="display: none; visibility: hidden;" name="CompanyId" value="@item.CompanyId" />
                                <input class="btn btn-success mt-3" type="submit" value="İptal Et" />
                            </form>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">

                        </div>

                    </div>
                </div>
            </div>
        }
        @foreach (var item in Model.Reservations)
        {
            <div class="modal fade" id="_i_@item.ReservationId">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Araç</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <img style="float: left; width: 100%; height: auto;" src="@item.ImagePath" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @Html.Partial("_Footer")
</body>
</html>
