@using Araç_Kiralama_Otomasyonu.Models;
@model RentingModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListCustomerRentings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Scripts/Css/Navbar.css" rel="stylesheet" />
    <link href="~/Scripts/Css/RentingList.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>
    <script src="~/Scripts/JsCodes/JSListRentings.js"></script>
    @Html.Partial("CustomerNavbar")
    <div  class="container mt-3">
        <p>Kiralamalarım</p>

        <div class="table-responsive">
            <table style="margin-bottom:70px" class="table table-bordered">
                <thead>
                    <tr>
                        <th id="BaslangicTarihiTh">Araç</th>
                        <th id="BaslangicTarihiTh">Başlangıç Tarihi</th>
                        <th id="BitisTarihiTh">Bitiş Tarihi</th>
                        <th id="IlkKilometreTh">İlk Kilometre</th>
                        <th id="SonKilometreTh">Son Kilometre</th>
                        <th id="UcretTh">Ücret</th>
                        <th id="PuanTh">Puanlandırma</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Rentings)
                    {
                        <tr>
                            <td id="PuanTd"><button class="listBtn" data-bs-toggle="modal" data-bs-target="#_i_@item.RentingId" type="button">Aracı Gör</button></td>
                            <td id="BaslangicTarihiTd">@item.StartDate.ToShortDateString()</td>
                            <td id="BitisTarihiTd">@item.FinishDate.ToShortDateString()</td>
                            <td id="IlkKilometreTd">@item.FirstKm</td>
                            <td id="SonKilometreTd">@item.LastKm</td>
                            <td id="UcretTd">@item.Payment</td>
                            @if (item.FinishDate.Date < DateTime.Now)
                            {
                                if (item.Score == 0)
                                {

                                    <td id="PuanTd"><button id="listBtn" data-bs-toggle="modal" data-bs-target="#_@item.RentingId" type="button">Puan Ver</button></td>
                                }
                                else
                                {
                                    <td id="PuanTd">@item.Score</td>
                                }

                            }
                            @if (item.FinishDate.Date > DateTime.Now)
                            {
                                <td id="PuanTd">Kiralama Sürüyor</td>
                            }


                        </tr>

                    }

                </tbody>
            </table>
        </div>
        @foreach (var item in Model.Rentings)
        {
            <div class="modal fade" id="_@item.RentingId">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Puanlama</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <form method="post" class="form">
                                <input type="number" max="10" min="0" class="form-control item" name="Score" />
                                <input style="display: none; visibility: hidden;" name="CarId" value="@item.CarId" />
                                <input style="display: none; visibility: hidden;" name="RentingId" value="@item.RentingId" />
                                <input style="display: none; visibility: hidden;" name="CompanyId" value="@item.CompanyId" />
                                <br />
                                <input class="btn btn-success" type="submit" />
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        }
        @foreach (var item in Model.Rentings)
        {
            <div class="modal fade" id="_i_@item.RentingId">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Araç</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <img style="float: left; width: 100%; height: auto;" src="@item.ImagePath" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @Html.Partial("_Footer")
</body>
</html>
