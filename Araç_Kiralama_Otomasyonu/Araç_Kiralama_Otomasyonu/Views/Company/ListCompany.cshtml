@using EntityLayer.Concrete;
@model List<Company>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>ListCompany</title>
</head>
<body>
    <div>
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Şirket Adı</th>
                <th>Şehir</th>
                <th>Adres</th>
                <th>Araba Sayısı</th>
                <th>Şirket Puanı</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CompanyId</td>
                    <th>@item.Name</th>
                    <td>@item.City</td>
                    <td>@item.Address</td>
                    <td>@item.CarCount</td>
                    <td>@item.CompanyScore</td>
                </tr>
            }
        </table>
        <br />
        <a class="btn-primary" href="AddCompany">Şirket Ekle</a>
    </div>
</body>
</html>
