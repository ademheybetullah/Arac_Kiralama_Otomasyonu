
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Scripts/Css/EmployeeLogin.css" rel="stylesheet" />
    <title>AdminLogin</title>
</head>
<body>

    @Html.Raw(TempData["ErrorCard"])
    <div class="login-form">
        <form method="post">
            <div class="form-name">
                Admin Girişi
            </div>
            <div class="form-group">
                <div class="IconDiv">
                    <img src="~/Scripts/Icons/Eposta.png" id="EpostaIcon">
                </div>
                <input type="text" class="form-control item" name="Email" id="Eposta" placeholder="E-Posta">
            </div>
            <div class="form-group">
                <div class="IconDiv">
                    <img src="~/Scripts/Icons/Sifre.png" id="SifreIcon">
                </div>
                <input type="password" class="form-control item" name="Password" id="Sifre" placeholder="Şifre">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-block login-account">
            </div>
        </form>
    </div>
    <script src="bootstrap.bundle.min.js"></script>
</body>
</html>
