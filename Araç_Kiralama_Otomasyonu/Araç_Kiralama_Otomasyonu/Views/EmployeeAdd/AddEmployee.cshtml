@model EntityLayer.Concrete.Employee
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Çalışan Ekle</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Scripts/Css/Navbar.css" rel="stylesheet" />
    <link href="~/Scripts/Css/CssAddEmployee.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("EmployeeNavbar")
    <div class="container mt-3">
        <p>Çalışan Ekle</p>
        <form method="post">
            <input style="display: none; visibility: hidden;" type="text" class="form-control" placeholder="" name="Status" value="Çalışan">
            <input style="display: none; visibility: hidden;" type="text" class="form-control" placeholder="" name="CompanyId" value="@Session["CompanyId"]">
            <div class="row">
                <div class="col">
                    Ad
                    <input type="text" class="form-control" placeholder="Ad" name="Name">
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
                <div class="col">
                    Soyad
                    <input type="text" class="form-control" placeholder="Soyad" name="Surname">
                    @Html.ValidationMessageFor(x => x.Surname)
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Email
                    <input type="email" class="form-control" placeholder="Email" name="Email">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="col">
                    Şifre
                    <input type="password" class="form-control" placeholder="Şifre" name="Password">
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Telefon Numarası
                    <input type="number" class="form-control" placeholder="Telefon Numarası" name="PhoneNo">
                    @Html.ValidationMessageFor(x => x.PhoneNo)
                </div>
                <div class="col">
                    Adres
                    <input type="text" class="form-control" placeholder="Adres" name="Address">
                    @Html.ValidationMessageFor(x => x.Address)
                </div>
            </div>
            <div class="row">
                <div class="col">
                    &nbsp;
                </div>
                <div class="col-1">
                    <input id="Gonderbtn" class="btn" type="submit">
                </div>
                <div class="col">
                    &nbsp;
                </div>
            </div>
        </form>
    </div>
    @Html.Partial("_Footer")
</body>
</html>
